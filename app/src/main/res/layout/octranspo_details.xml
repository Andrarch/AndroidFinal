<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/andrewOCDetailBusType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/andrewOCDetailTitle"
        android:text="@string/AndrewDetailStopNumber"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_column="0"
        />

    <TextView
        android:id="@+id/andrewOCDetailBusSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/andrewOCDetailBusType"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:text="PlaceHolder" />

    <TextView
        android:id="@+id/andrewOCDetailDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"  android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_column="2"
        />

    <TextView
        android:id="@+id/andrewOCDetailStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/andrewOCDetailAdjustedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_column="1"/>

    <TextView
        android:id="@+id/andrewOCDetailAdjustedAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"  android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_column="2"/>

    <TextView
        android:id="@+id/andrewOCDetailLastTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_column="0" />
    <TextView
        android:id="@+id/andrewOCLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_column="1" />
    <TextView
        android:id="@+id/andrewOCLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_column="2" />
</GridLayout>