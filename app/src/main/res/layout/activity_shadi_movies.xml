<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.andrew.androidfinal.ShadiMovies">
    <ProgressBar
        android:id="@+id/progressBarId"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <ListView
        android:id="@+id/listViewId"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:divider="#edcf06"
        android:dividerHeight="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#43c188">


    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#7d9982"
        android:id="@+id/editTextMovieId"
        android:width="295dp"
        android:hint="@string/TypeHere"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/buttonAddId"
        android:text="@string/myButton"
        android:layout_gravity="right"/>

    </LinearLayout>
</LinearLayout>
