<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/andrewOCStopIDGoImage"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/gotranspo" />

    <ImageView
        android:id="@+id/andrewOCStopIDDelImage"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/deletetranspo" />

    <TextView
        android:id="@+id/andrewStopIDTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/andrewOCStopIDGoImage"
        android:layout_toLeftOf="@id/andrewOCStopIDDelImage"

        android:text="textView" />



</RelativeLayout>